<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tile_spacing"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Foreign Addresses"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Scan"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Windows Key + R"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="One Time Charge"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Viruses"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Microsoft Certified"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="$$$"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Trying to stick to the script"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Corrupted Drives"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button10"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Support.me"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/tile_spacing"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button11"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:layout_gravity="center"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Network Security"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button12"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Do One Thing"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button13"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="CMD.exe"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button14"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Secure Server"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button15"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="C:\\>Tree"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button16"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Event Viewer"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button17"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Stopped Services"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button18"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Netstat"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button19"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:singleLine="true"
                    android:text="I can't understand you sir"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_spacing" />

                <Button
                    android:id="@+id/button20"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tile_height"
                    android:background="@drawable/tile_drawable"
                    android:onClick="onButtonPressed"
                    android:text="Bad Language"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        
        <com.google.android.gms.ads.AdView
            android:id="@+id/footerAdViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ad_footer_id">
        </com.google.android.gms.ads.AdView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <ImageView
            android:id="@+id/rand_peripheral"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>